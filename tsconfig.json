{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "build",
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "module": "CommonJS",
    "target": "ES2020",
    "allowJs": false,
    "sourceMap": true,
    "strict": true,
    "noImplicitReturns": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "typeRoots": [
      "./typings"
    ],
    "types": [
      "node"
    ],
    "lib": [
      "es6",
      "es5",
      "es2017",
      "scripthost"
    ]
  },
  "include": [
    "src/**/*",
    "typings/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
